<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="10dp"
    android:padding="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialidades del asesor"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginBottom="20dp"/>

    <CheckBox
        android:id="@+id/salud_sexual_reprodutivaCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salud sexual y reproductiva" />

    <CheckBox
        android:id="@+id/identidadCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identidad" />

    <CheckBox
        android:id="@+id/nutricionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutricion" />

    <CheckBox
        android:id="@+id/embarazoCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Embarazo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/cancelarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCELAR"
            android:layout_marginHorizontal="10dp"/>

        <Button
            android:id="@+id/aceptarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ACEPTAR"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>
</LinearLayout>