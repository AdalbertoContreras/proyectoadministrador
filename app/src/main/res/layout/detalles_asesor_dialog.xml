<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles del asesor"
        android:textSize="22dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombres : "/>
        <TextView
            android:id="@+id/nombreAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos : "/>
        <TextView
            android:id="@+id/apellidosAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo : "/>

        <TextView
            android:id="@+id/sexoAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sexo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electronico : "/>
        <TextView
            android:id="@+id/correoElectronicoAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de telefono : "/>
        <TextView
            android:id="@+id/numeroTelefonoAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direccion : "/>
        <TextView
            android:id="@+id/direccionAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la cuenta : "/>
        <TextView
            android:id="@+id/nombreCuentaAsesorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especialidades : "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:checked="true"
                android:id="@+id/sexualidadCheckBox"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:checked="true"
                android:id="@+id/identidadCheckBox"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="I"/>
            <CheckBox
                android:checked="true"
                android:id="@+id/maltratoCheckBox"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="M"
                android:layout_marginHorizontal="5dp"/>
            <CheckBox
                android:checked="true"
                android:id="@+id/embarazoCheckBox"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="E"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acceso a la app"/>
        <CheckBox
            android:id="@+id/permisoAccesoAsesorCheckBox"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Permitido"
            android:layout_gravity="left"
            android:checked="true"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>
</LinearLayout>