<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfilCircleImageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            tools:srcCompat="@tools:sample/avatars" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nombreAsesorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="ASESOR 1"
                android:gravity="center"
                android:textColor="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sexualidadImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/presence_online"/>

                <ImageView
                    android:id="@+id/identidadImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/presence_online" />
                <ImageView
                    android:id="@+id/maltratoImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/presence_online"/>
                <ImageView
                    android:id="@+id/embarazoImageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/presence_online"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/detallesAsesorImageButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@android:drawable/ic_menu_manage"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>