<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gris3"
    tools:context="com.example.serviamigoadmin.Fragment.Modificar_noticiaFragment"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="MODIFICAR ARTICULOS"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Gris3"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.70"
                        android:paddingLeft="5dp"
                        android:text="CATEGORIA"
                        android:textColor="@color/colorPrimaryDark" />

                    <Spinner
                        android:id="@+id/categoriaspinnerRegistrar_noticia"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.30" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Gris3"
                    android:elevation="20dp"
                    app:cardCornerRadius="6dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/tituloEditTextRegistrarNoticia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Titulo:"
                            android:textSize="14sp"
                            android:layout_marginVertical="10dp"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/Gris3"
                        android:orientation="horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/imagenImageViewRegistrarImagen"
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:background="@color/Gris3" />

                    <Button
                        android:id="@+id/cargarimagenButtonRegistrarNoticia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CAMBIAR IMAGEN" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/contenidoEditTextRegistrarNoticia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:hint="Contenido:"
                            android:inputType="textMultiLine"
                            android:scrollbars="vertical"
                            android:textSize="13sp"/>


                    </android.support.design.widget.TextInputLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/registrar_noticiaButtonRegistrarNoticia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR CAMBIOS  ARTICULO"
                    android:theme="@style/Button" />
            </LinearLayout>
        </ScrollView>

</LinearLayout>
