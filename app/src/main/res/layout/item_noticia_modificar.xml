<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/Gris3"
        android:paddingVertical="5dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:cardCornerRadius="4dp"
            android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/imagenArticuloCircleImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:src="@drawable/sede"
            />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="85dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="5dp">
            <TextView
                android:id="@+id/tituloArticuloTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo del articulo"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16dp"
                android:paddingHorizontal="5dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/White"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon2_75"
                    />
                <TextView
                    android:id="@+id/numeroMeGustaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 me gusta"
                    android:minWidth="60dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gris3"
        android:layout_marginVertical="5dp"></LinearLayout>


</LinearLayout>