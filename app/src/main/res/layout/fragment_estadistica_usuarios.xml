<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.serviamigoadmin.Fragment.EstadisticaUsuariosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ESTADISTICAS DE NUMERO DE USUARIOS"
                android:textSize="21sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="# USUARIOS TOTAL"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usuarioMasculinoTotalTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#0A477C"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/usuarioFemeninoTotalTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/rojo"
                        android:textSize="22dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/usuarioTotalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/Black"
                    android:textSize="32dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFANTES"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usuarioMasculinoInfanteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="#0A477C"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/usuarioFemeninoInfanteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/rojo"
                        android:textSize="22dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/usuarioInfanteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADOLECENTES"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/usuarioMasculinoAdolecenteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#0A477C"/>
                    <TextView
                        android:id="@+id/usuarioFemeninoAdolecenteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/rojo"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/usuarioAdolecenteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADULTOS"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/usuarioMasculinoAdultoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#0A477C"/>
                    <TextView
                        android:id="@+id/usuarioFemeninoAdultoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/rojo"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/usuarioAdultoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:textColor="@color/Black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MAYORES"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/usuarioMasculinoMayorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#0A477C"/>
                    <TextView
                        android:id="@+id/usuarioFemeninoMayorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/rojo"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/usuarioMayorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:textColor="@color/Black"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>